<% content_for :title, "Editar Sucursal" %>

<div class="dashboard-header text-center mb-4">
  <h2>Editar Sucursal <%= @branch.name %></h2>
</div>

<div class="card card-modern p-4">
  <%= form_with(model: [@barbershop, @branch], local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Nombre de la Sucursal", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, "Dirección", class: "form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :phone, "Teléfono", class: "form-label" %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :active, class: "form-check-input" %>
      <%= f.label :active, "Sucursal Activa", class: "form-check-label" %>
    </div>

    <%= f.submit "Actualizar Sucursal", class: "btn btn-primary-custom" %>
  <% end %>
</div>
